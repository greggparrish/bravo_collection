<% provide(:title, "Finding Aid: " + @finding_aid.title) %>
<div class='container-fluid'>
  <div class="bread">
    <span class="bread_first"><%= link_to "FINDING AID: ESTELA BRAVO COLLECTION", external_finding_aid_url, target: '_blank' %></span>
  </div>
  <div class='page_intro'>
    <div class='col-xxs col-xs-4 fa_menu'>
      <%= image_tag(@finding_aid.image, class: "fa_img") %>
      <h5>CONTENTS</h5>
      <ul>
        <li><%= icon('angle-right') %> <a href="#about">About</a></li>
        <li><%= icon('angle-right') %> <%= link_to "Finding Aid", external_finding_aid_url, target: '_blank' %></li>
      </ul>
    </div>
    <div class='col-xxs col-xs-8 fa_header'>
      <p>
        <%= @finding_aid.header.html_safe %>
      </p>
    </div>
  </div>
</div>

<!-- START ABOUT GREY -->
<div class='container-fluid grey_section' id="about">
  <div class='row'>
    <div class='col-xs-12'>
     <h6>ABOUT</h6>
      <h5>DESCRIPTIVE SUMMARY</h5>
      <table class='finding_aid_about'>
        <tbody>
          <% @finding_aid.attributes.except("id", "header", "created_at", "updated_at", "slug", "access_points", "scope_note", "historical_note", "arrangement", "administrative_information", "image_file_name", "image_updated_at", "image_content_type", "image_file_size").each do |k,v| %>
            <tr>
              <td><%= k.humanize %></td>
              <td><%= v.try(:html_safe) %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<!-- END ABOUT GREY -->
<% @finding_aid.attributes.except("id", "header", "creator", "title", "dates_inclusive", "dates_bulk", "abstract", "quantity", "location_note", "language", "call_phrase", "created_at", "updated_at", "slug", "image_file_name", "image_updated_at", "image_content_type", "image_file_size", "historical_note", "scope_note", "access_points", "arrangement", "administrative_information").each do |k,v| %>
  <div class='container-fluid <%= cycle '', 'grey_section' %>'>
    <div class='row'>
      <div class='col-xs-12'>
        <h5><%= k.humanize.upcase %></h5>
        <p><%= v.try(:html_safe) %></p>
      </div>
    </div>
 </div>
<% end %>

<%= render @series %>

<div class='container-fluid'>
  <div class='row'>
    <div class='col-xs-12'>
      <h5 class="all-caps">THIS PROJECT WAS MADE POSSIBLE THROUGH THE GENEROSITY OF:</h5>

      <%- donor_list.each do |donor| -%>
        <div><%= donor %></div>
      <%- end -%>
    </div>
  </div>
</div>

<!-- child of the body tag -->
<span id="top-link-block" class="hidden">
    <a href="#top" class="well well-sm" onclick="$('html,body').animate({scrollTop:0},'slow');return false;">
        <i class="glyphicon glyphicon-chevron-up"></i> Back to Top
    </a>
</span><!-- /top-link-block -->
